@model SmartProd.Models.NotaEntrega

@{
    ViewData["Title"] = "RegistrarNotaEntrega";
}

<h1>RegistrarNotaEntrega</h1>

<h4>NotaEntrega</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistrarNotaEntrega" method="post">
            <div>
                <label>Número da Nota:</label>
                <input asp-for="NumeroNota" class="form-control" />
            </div>
            <div>
                <label>Fornecedor:</label>
                <input asp-for="Fornecedor" class="form-control" />
            </div>

            <h4>Itens da Entrega</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Produto (Id)</th>
                        <th>Quantidade</th>
                    </tr>
                </thead>
                <tbody id="itens-entrada">
                    <tr>
                        <td>
                            <select name="Itens[0].IdProduto" class="form-control">
                                <option value="">-- Selecione --</option>
                                @foreach (var produto in ViewBag.Produtos)
                                {
                                    <option value="@produto.Id">@produto.Nome</option>
                                }
                            </select>
                        </td>
                        <td><input name="Itens[0].Quantidade" type="number" class="form-control" /></td>
                    </tr>
                </tbody>
            </table>
            <button type="button" onclick="adicionarItemEntrada()">Adicionar Item</button>

            <br /><br />
            <button type="submit" class="btn btn-success">Salvar Nota de Entrega</button>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
